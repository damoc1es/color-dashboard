<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.FlowPane?>
<HBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="dev.damocles.colordashboard.ColorDashController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <FlowPane fx:id="colorGrid" hgap="10" vgap="10">

    </FlowPane>
    <VBox spacing="5">
        <TextField fx:id="fieldColor"/>
        <Button text="Add Color" onAction="#onAddColorClick"/>
        <Button text="Delete Color" onAction="#onDeleteColorClick"/>
        <Button text="Undo" onAction="#onUndoClick"/>
        <Label fx:id="msgText"/>
    </VBox>
</HBox>
